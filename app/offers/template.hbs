{{page-title 'Offers'}}
<div class="min-h-screen flex flex-col">
  <Header />
  <div
    class='py-7 grow bg-gradient-to-tr from-red-300 to-blue-400 flex flex-col justify-center items-center font-poppins gap-y-5'
  >
    {{#if this.doOffersExist}}
      {{#each this.model as |offer|}}
        {{#if offer.isActive}}
        <LinkTo @route="offer.show" @model={{offer}}>
            <div class="bg-white w-[85vw] rounded-lg px-7 py-3 flex flex-col justify-center">
                <div class="flex justify-between">
                  <p class="text-lg">{{offer.brand}} {{offer.model}}, {{offer.yearOfProduction}}</p>
                  <p class="text-lg">${{offer.price}}</p>
                </div>
                <div class="text-sm">
                  <p>Stan: {{offer.condition}}</p>
                  <p>Silnik: {{offer.engine}}</p>
                  <p class="overflow-hidden">Opis: {{offer.description}}</p>
                </div>
            </div>
        </LinkTo>
        {{/if}}
      {{/each}}
    {{else}}
      <p class="bg-white rounded-lg px-7 py-3">Brak istniejÄ…cych ofert</p>
    {{/if}}
  </div>
  <Footer />
</div>
{{outlet}}